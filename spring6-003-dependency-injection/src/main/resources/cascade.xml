<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 使用级联属性赋值需要注意两点
            1、配置的顺序不能颠倒，必须如下顺序。
            2、clazz属性必须提供getter方法。
    -->
    <bean id="studentBean" class="com.liang.bean.Student">
        <property name="name" value="张三"></property>

        <property name="clazz" ref="clazzBean"></property>
        <!-- 使用级联属性赋值-->
        <property name="clazz.name" value="高三2班"></property>
    </bean>

    <bean id="clazzBean" class="com.liang.bean.Clazz"/>

<!--    <bean id="clazzBean" class="com.liang.bean.Clazz">-->
<!--        <property name="name" value="高三1班"></property>-->
<!--    </bean>-->

</beans>