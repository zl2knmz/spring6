<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 定义bean -->
    <bean id="orderDaoBean" class="com.liang.dao.OrderDao"></bean>

    <bean id="orderServiceBean" class="com.liang.service.OrderService">
        <!-- 引入外部bean -->
        <property name="orderDao" ref="orderDaoBean"></property>
    </bean>

    <bean id="orderServiceBean2" class="com.liang.service.OrderService">
        <!-- 引入内部bean -->
        <property name="orderDao">
            <bean class="com.liang.dao.OrderDao"></bean>
        </property>
    </bean>

    <bean id="userBean" class="com.liang.bean.User">
        <!-- 基本数据类型用value，引用数据类型用ref -->
        <property name="userName" value="张三"></property>
        <property name="age" value="23"></property>
    </bean>

    <bean id="svt" class="com.liang.bean.SimpleValueType">
        <property name="age" value="21"/>
        <property name="age2" value="22"/>
        <property name="userName" value="zhangsan"/>
        <property name="flag" value="false"/>
        <property name="flag2" value="true"/>
        <property name="c" value="1"/>
        <property name="c2" value="2"/>
        <property name="clazz" value="java.lang.String"/>
        <property name="season" value="SPRING"/>
        <!-- <property name="date" value="2022-12-06 23:10:12"/>-->
        <!-- Date如果是简单类型注入，必须写成如下格式（正常还是通过ref注入）-->
        <property name="date" value="Tue Dec 06 23:14:37 CST 2022"/>
    </bean>

<!--    spring来管理数据源-->
    <bean id="myDataSource" class="com.liang.jdbc.MyDataSource">
        <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/spring6"/>
        <property name="userName" value="root"/>
        <property name="password" value="12345678"/>
    </bean>
</beans>